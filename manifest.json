{
  "manifest_version": 3,
  "name": "LinkedIn Sales Intelligence - Lead Research",
  "version": "1.0.20",
  "description": "AI-powered sales research for LinkedIn. Get instant prospect intelligence, buying signals, decision makers & tech stack insights.",
  "author": "LinkedIntel Team",
  "homepage_url": "https://github.com/linkedintel/chrome-extension-public-clean",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "identity",
    "webNavigation",
    "scripting"
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "_comment_oauth": "OAuth is optional. All Chrome Built-in AI demos work without authentication. Developers can add their own client ID for backend features.",
  "host_permissions": [
    "https://*.linkedin.com/in/*",
    "https://*.linkedin.com/company/*",
    "https://api.example.com/*"
  ],
  "_comment_api": "Replace api.example.com with your backend endpoint if you want to connect to a server. The extension works fully client-side for hackathon judging.",
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/in/*",
        "https://*.linkedin.com/company/*"
      ],
      "js": [
        "src/shared/logger.js",
        "src/services/chrome-ai-service.js",
        "src/services/chrome-ai-bridge.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://*.linkedin.com/in/*",
        "https://*.linkedin.com/company/*"
      ],
      "js": [
        "src/shared/logger.js",
        "src/services/chrome-ai-proxy.js",
        "src/services/unified-context-service.js",
        "src/services/fact-extraction-service.js",
        "src/content/linkedin-posts-scraper.js",
        "src/content/factual-intelligence-panel.js",
        "src/content/ai-status-indicator.js",
        "src/content/ai-onboarding.js",
        "src/content/badge-injector.js",
        "src/content/chat-interface.js",
        "src/content/insights-panel.js",
        "src/content/fab-component.js",
        "src/content/linkedin-detector.js"
      ],
      "css": [
        "src/styles/output.css",
        "src/styles/components.min.css",
        "src/content/styles/linkedintel-content.css",
        "src/content/styles/fab.css",
        "src/content/styles/badges.css",
        "src/content/styles/shadcn-components.css",
        "src/content/styles/chat-interface.css",
        "src/content/styles/chrome-ai.css",
        "src/content/styles/factual-intelligence.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LinkedIn Sales Intelligence - Analyze Prospect",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "src/content/styles/*", "src/styles/*"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "trial_tokens": [],
  "_comment_trial_tokens": "Origin trial tokens are intentionally omitted. Enable Chrome Built-in AI flags locally when testing or add your own token."
}
